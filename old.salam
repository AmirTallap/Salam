
عملکرد فاکتوریل(عدد)
{
    اگر عدد == ۱ یا عدد == ۰ {
        برگشت ۱
    }
    واگرنه {
        برگشت عدد * فاکتوریل(عدد - ۱)
    }
}

عملکرد تست {
    نمایش "..."
    برگشت فاکتوریل(۱۰)
}

عملکرد سلام() {
    نمایش "به نام خدا"
    نمایش تست()

    اگر تست() == 3628800 {
        نمایش "ریال"
    }
}
